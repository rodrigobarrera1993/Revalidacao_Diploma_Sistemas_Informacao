<h1> Cadastrando Novo Navio</h1>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
               
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
               <% if @vessel.errors.any?%>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <h5 class="alert-heading">Erros Encontrados</h5>
                        <ul>
                            <% @vessel.errors.full_messages.each  do |message| %>
                            <li style="color:black; font-size:15px"> <%= message %></li>
                            <%end%>
                        </ul>
                        <button class="close" type="button" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">Ã—</span>
                        </button>
                    </div>
                <% end %>

                <%= form_with(url:operators_backoffice_vessel_index_path, model: @vessel, local: true) do |form| %>
                    <div class="item form-group">
                        <%=form.label 'Nome', class:"col-form-label col-md-3 col-sm-3 label-align"%>
                        <div class="col-md-6 col-sm-6 ">
                            <%=form.text_field :name, class:"form-control",  :required => 'required' %>
                        </div>
                    </div>

                     <div class="item form-group">
                        <%=form.label 'MMSI', class:"col-form-label col-md-3 col-sm-3 label-align"%>
                        <div class="col-md-6 col-sm-6 ">
                            <%=form.text_field :mmsi, class:"form-control",  :required => 'required' %>
                        </div>
                    </div>

                    <div class="item form-group">
                        <%=form.label 'Comprimento', class:"col-form-label col-md-3 col-sm-3 label-align"%>
                        <div class="col-md-6 col-sm-6 ">
                            <%=form.number_field  :length, in: 0.0..500.0, step: 0.01, class:"form-control",  :required => 'required' %>
                        </div>
                    </div>

                    <div class="item form-group">
                        <%=form.label 'Boca (Largura)', class:"col-form-label col-md-3 col-sm-3 label-align"%>
                        <div class="col-md-6 col-sm-6 ">
                            <%=form.number_field  :width, in: 0.0..100.0, step: 0.01, class:"form-control",  :required => 'required' %>
                        </div>
                    </div>

                    <div class="item form-group">
                        <%=form.label 'Tipo', class:"col-form-label col-md-3 col-sm-3 label-align"%>
                        <div class="col-md-6 col-sm-6 ">
                            <%=form.text_field :type_vessel, class:"form-control",  :required => 'required' %>
                        </div>
                    </div>

                    <div class="item form-group">
                        <%=form.label 'URL link da magem', class:"col-form-label col-md-3 col-sm-3 label-align"%>
                        <div class="col-md-6 col-sm-6 ">
                            <%=form.text_field :url_image, class:"form-control",  :required => 'required' %>
                        </div>
                    </div>

                    </div>
                    <div class="ln_solid"></div>
                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 offset-md-3">
                            <button type="submit" class="btn btn-success">Enviar</button>
                        </div>
                    </div>

                <% end %>
            </div>
        </div>
    </div>
</div>