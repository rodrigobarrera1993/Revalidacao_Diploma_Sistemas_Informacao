<h1> Próximas Manobras</h1>
<div class="w3-padding w3-white notranslate">
<div class="table-responsive">
<table class="table table-hover">
    <thead>
        <tr>
        <th>Data</th>
        <th>Horário</th>
        <th>Prático</th>
        <th>Tipo de Manobra</th>
        <th>Navio</th>
        <th>Comprimento</th>
        <th>Boca</th>
        <th>Deslocamento</th>
        <th>Foto</th>
        <th>Terminal</th>
        <th>Tipo de Carga</th>
        <th>Foto</th>
        <th>Operador</th>
        <th scope="col"> 
            <%= link_to new_operators_backoffice_next_maneuver_path, class:"btn btn-success btn-circle" do%>
                <i class="fas fa-plus"></i>
            <%end%>
        </th>
       <!-- 
       <th>Nome</th>
        <th>Sobrenome</th>
         -->
        </tr>
    </thead>
    <tbody>
    <% @maneuvers.each do |maneuver| %>
        <%if maneuver.is_finished == false%>
        <tr>
            <td><%= "#{maneuver.date_maneuver.day}/#{maneuver.date_maneuver.month}/#{maneuver.date_maneuver.year}" %></td>
            <td><%= maneuver.time_maneuver.strftime("%k:%M") %></td>
            <td><%= "#{maneuver.pilot_profile.first_name} #{maneuver.pilot_profile.last_name}" %></td>
            <td><%= maneuver.type_maneuver%></td>
             <td><%= maneuver.vessel.name%></td>
             <td><%= maneuver.vessel.length%></td>
             <td><%= maneuver.vessel.width%></td>
             <td><%= maneuver.vessel_displacement%></td>
            <td><%= image_tag maneuver.vessel.url_image, width:100, height:50 %></td>
             <td><%= maneuver.terminal.name%></td>
             <td><%= maneuver.terminal.cargo%></td>
            <td><%= image_tag maneuver.terminal.url_image, width:100, height:50 %></td>
            <td><%= "#{maneuver.operator_profile.first_name} #{maneuver.operator_profile.last_name}" %></td>


             <td style="width: 120px">
                <%= link_to edit_operators_backoffice_next_maneuver_path(maneuver.id), class:"btn btn-primary btn-circle" do%>
                <i class="far fa-edit"></i>
                <%end%>
         
                <%= link_to operators_backoffice_next_maneuver_path(maneuver.id), method: :delete, class:"btn btn-danger btn-circle", data: {confirm: "Deseja realmente excluir estea manobra?"} do%>
                 <i class="fas fa-trash-alt"></i>
                <%end%>
            </td>
            
        </tr>

     <%end%>
       
    <% end %>
    </tbody>
</table>
</div>
</div>