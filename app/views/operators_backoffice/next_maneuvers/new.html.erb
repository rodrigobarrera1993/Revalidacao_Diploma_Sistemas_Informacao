<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <% if @maneuver.errors.any?%>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <h5 class="alert-heading">Erros Encontrados</h5>
                        <ul>
                            <% @maneuver.errors.full_messages.each  do |message| %>
                            <li style="color:black; font-size:15px"> <%= message %></li>
                            <%end%>
                        </ul>
                        <button class="close" type="button" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                <% end %>

                <%= form_with(url:operators_backoffice_next_maneuvers_path, model: @maneuver, local: true) do |form| %>
                    <div class="form-group">
                        <div class="row">
                            <%=form.label 'Data', class:"col-md-2 mb-1"%>
                        </div>
                        <div class="row">
                            <div class="col-md-3 mb-1">
                            <%=form.text_field :date_maneuver, class:"date-picker form-control", :required => 'required', placeholder: "Digite ou Selecione..." %>
                            </div>
                        </div>
                    </div>
                    
        <div class="form-group">
            <div class="row">
            <div class="col-md-2 mb-1">
                <%=form.label 'Hora'%>
                <%= form.select(:hour, options_for_select(@hour_options), {prompt: "Selecione..."}, { class:" form-control custom-select d-block w-100", :required => 'required'})%>
            </div>
            
           <div class="col-md-2 mb-1">
                <%=form.label 'Minuto'%>
                <%=form.select(:minute, options_for_select(@min_options), {prompt: "Selecione..."}, {class:" form-control custom-select d-block w-100", :required => 'required' })%>
            </div>
            </div>
          </div>

          <%= form.fields_for :pilot_profile do |pilot_form| %>
                <div class="item form-group">
                     <div class="row">
                            <div class="col-md-3 mb-1">
                                <%=pilot_form.label 'Nome do Prático'%>
                                <%=pilot_form.select(:pilot_profile_id, options_for_select(@pilot_profile_options), {prompt: "Selecione..."}, {class:" form-control custom-select d-block w-100",:required => 'required' })%>
                        </div>
                    </div>
                </div>
            <%end%>

             <div class="form-group">
                <div class="row">
                  <div class="col-md-2 mb-1">
                    <%=form.label 'Tipo de Manobra'%>
                    
                    <%= form.select(:maneuver_type, options_for_select(@maneuver_type_options), {prompt: "Selecione..."}, {class:" form-control custom-select d-block w-100", :required => 'required' })%>
                </div>
                </div>
            </div>


                <%= form.fields_for :vessel do |vessel| %>
                <div class="item form-group">
                     <div class="row">
                            <div class="col-md-3 mb-1">
                                <%=vessel.label 'Nome do Navio'%>
                                <%=vessel.select(:vessel_id, options_for_select(@vessel_options), {prompt: "Selecione..."}, {class:" form-control custom-select d-block w-100", :required => 'required' })%>
                        </div>
                    </div>
                </div>
            <%end%>

            <div class="form-group">
                <div class="row">
                    <%=form.label 'Deslocamento do Navio', class:"col-md-2 mb-1"%>
                </div>
                <div class="row">
                    <div class="col-md-2 mb-1">
                    <%=form.text_field :vessel_displacement, placeholder: "Digite...", class:"form-control", :required => 'required' %>
                    </div>
                </div>
            </div>

             <%= form.fields_for :terminal do |terminal| %>
                <div class="item form-group">
                     <div class="row">
                            <div class="col-md-3 mb-1">
                                <%=terminal.label 'Nome do Terminal'%>
                                <%=terminal.select(:terminal_id, options_for_select(@terminal_options), {prompt: "Selecione..."}, {class:" form-control custom-select d-block w-100", :required => 'required' })%>
                        </div>
                    </div>
                </div>
            <%end%>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 offset-md-3">
                            <button type="submit" class="btn btn-success">Enviar</button>
                        </div>
                    </div>

                <% end %>
            </div>
        </div>
    </div>
</div>


